<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:padding="30dp"
    android:layout_gravity="center"
    tools:context="com.example.raja.c_gpacalc.GPAAct">

    <Button
        android:id="@+id/civil"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="CIVIL ENGINEERING"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/departments"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/cse"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="COMPUTER SCIENCE ENGINEERING"
        android:layout_below="@+id/civil"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/ece"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ELECTRONICS AND COMMUNICATION  ENGINEERING"
        android:layout_below="@+id/cse"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/eee"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ELECTRICAL AND ELECTRONICS  ENGINEERING"
        android:layout_below="@+id/ece"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/it"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="INFORMATION TECHNOLOGY"
        android:layout_below="@+id/eee"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/mech"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="MECHANICAL ENGINEERING"
        android:layout_below="@+id/it"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/departments"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEPARTMENT(s)"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
